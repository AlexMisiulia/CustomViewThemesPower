<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTextViewTheme">
        <item name="textTextViewText1Style">@style/PrimaryText</item>
        <item name="textTextViewText2Style">@style/SecondaryText</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#726A6A</item>
    </style>

</resources>
